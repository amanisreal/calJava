<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:background="@color/black"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!--    <FrameLayout-->
    <!--        android:id="@+id/adView_container"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintLeft_toLeftOf="parent"-->
    <!--        app:layout_constraintRight_toRightOf="parent">-->
    <!--    </FrameLayout>-->
    <TextView
        android:id="@+id/textviewLight"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/black"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:gravity="end|bottom" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/black"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:gravity="end|bottom" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnCLR"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="AC"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:background="@drawable/round_style"
            tools:ignore="HardcodedText,NestedWeights,OnClick"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnBraces"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="C"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:background="@drawable/round_style"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnMod"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textColor="@color/green"
            android:textSize="25sp"
            android:background="@drawable/round_style"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle" />



        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/round_style"
            android:text="/"
            android:textColor="@color/green"
            android:textSize="25sp"
            tools:ignore="HardcodedText,OnClick"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:background="@drawable/round_style"
            tools:ignore="NestedWeights"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/round_style"
            android:text="8"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/round_style"
            android:text="9"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle" />


        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="@drawable/round_style"
            android:text="*"
            android:textColor="@color/green"
            tools:ignore="HardcodedText,NestedWeights,OnClick"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">


        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/round_style"
            android:text="4"
            tools:ignore="NestedWeights"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:background="@drawable/round_style"
            android:text="5"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:background="@drawable/round_style"
            android:text="6"
            android:textColor="@color/white"
            style="?android:attr/buttonBarButtonStyle" />



        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textSize="35sp"
            android:background="@drawable/round_style"
            android:text="-"
            android:textColor="@color/green"
            tools:ignore="HardcodedText,OnClick"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/round_style"
            android:text="1"
            android:textSize="25sp"
            tools:ignore="NestedWeights"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/round_style"
            android:text="2"
            android:textSize="25sp"
            android:textColor="@color/white"
            tools:ignore="HardcodedText"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/round_style"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="25sp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="@color/green"
            android:textSize="30sp"
            android:background="@drawable/round_style"
            tools:ignore="HardcodedText,OnClick"
            style="?android:attr/buttonBarButtonStyle" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnPM"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:background="@drawable/round_style"
            tools:ignore="HardcodedText,NestedWeights"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:background="@drawable/round_style"
            android:textSize="25sp"
            android:text="0"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="."
            android:textColor="@color/white"
            android:background="@drawable/round_style"
            android:textSize="25sp"
            tools:ignore="HardcodedText,NestedWeights,OnClick"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="="
            android:textColor="@color/green"
            android:background="@drawable/equal_style"
            android:textSize="25sp"
            tools:ignore="HardcodedText,NestedWeights"
            style="?android:attr/buttonBarButtonStyle" />


    </LinearLayout>

</LinearLayout>